{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:import/recommended",
    "plugin:prettier/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "settings": {
    "react": {
      "version": "detect"
    },
    "import/resolver": {
      "alias": {
        "map": [["src", "./src/"]]
      },
      "extensions": [".js", ".jsx", ".ts", ".tsx", ".json", ".scss"]
    }
  },
  "rules": {
    "no-console": "warn",
    "no-debugger": "error"
  }
}
